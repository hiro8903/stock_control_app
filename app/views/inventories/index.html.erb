<div class="row justify-content-center text-center">
  <div class="col-12">
    <h1>棚卸結果</h1>
    <h5 class="text-end">*単位：kg</h5>
    <table class="table my-3">
      <thead>
        <tr>
          <th scope="col">塗料名</th>
          <th scope="col"><%=  %></th>
          <th scope="col"><%= @day.strftime("%Y年%m月") %></th>
        </tr>
      </thead>
      <tbody>
        <% @paints.each do |paint| %>
          <tr class="align-middle">
            <td><%= paint.name %></td>
            <% @inventories.where(paint_id: paint.id).each do |inventory| %>
              <td><%= inventory.quantity %></td>
              <td></td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    <table>
  </div>
</div>
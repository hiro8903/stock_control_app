<%= form_with model: paint do |form| %>
 <%= render 'shared/error_messages_of_paints' %> 

  <%= form.label :name, class: "form-label m-1" %><br>
  <%= form.text_field :name, class: "form-control my-1" %>

  <%= form.label :manufacturer, class: "form-label m-1" %>
  <% if @paint.manufacturer_id.present? %>
    <%= form.collection_select :manufacturer_id, @manufacturers, :id, :name, { include_blank: "選択してください", selected: @paint.manufacturer_id }, class: 'form-control my-1' %>
  <% else %>
    <%= form.collection_select :manufacturer_id, @manufacturers, :id, :name, { include_blank: "選択してください", selected:"" }, class: 'form-control my-1' %>
  <% end %>

  <%= form.label :unit_price, class: "form-label m-1" %><br>
  <%= form.number_field :unit_price, min: "0", step: "0.001", class: 'form-control my-1' %>

  <%= form.label :ordering_point, class: "form-label m-1" %><br>
  <%= form.number_field :ordering_point, min: "0", step: "0.001", class: "form-control my-1" %>

  <%= form.label :main_ingredient, class: "form-label m-1" %><br>
  <%= form.text_field :main_ingredient, class: "form-control my-1" %>

  <%= form.label :warranty, class: "form-label m-1" %><br>
  <%= form.number_field :warranty, min: "1", class: 'form-control my-1' %>

  <%= form.label :discontinue, class: "form-check-label m-1" %><br>
  <%= form.check_box :discontinue, class: 'form-check-input my-1 p-3' %>

  <div class="d-grid gap-2">
    <%= form.submit yield(:btn_text), class: "btn btn-primary mt-1" %>
    <%= link_to "戻る", :back, class: "btn btn-secondary" %>
  </div>
<% end %>